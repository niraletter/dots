  "cpu": {
    "interval": 3,
    "format": "CPU {icon}  ",
    "format-icons": [
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
    ],
    "on-click": "omarchy-launch-or-focus-tui btop",
  },
  "memory": {
    "format": "MEM {icon}  ",
    "interval": 3,
    "on-click": "omarchy-launch-or-focus-tui btop",
    "format-icons": [
      "",
      "",
      "",
      "",
      "",
